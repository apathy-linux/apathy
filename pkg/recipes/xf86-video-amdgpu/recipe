# 1
export   CFLAGS="${CFLAGS}   -fno-builtin"
export CXXFLAGS="${CXXFLAGS} -fno-builtin"

case "${LDFLAGS}" in
 *,-z,now*)
  export LDFLAGS="$(echo "${LDFLAGS}" | sed 's/,-z,now//')"
 ;;
esac

autoreconf -fvi

pdir="/mss/repo/pkg/recipes/xf86-video-amdgpu/patches"
patch -p1 < "${pdir}"/0001-fix-missing-DPMSModeOn-def.patch

./configure \
 --build=$CBUILD \
 --host=$CHOST   \
 --prefix=/usr   \
 --enable-udev   \
 --enable-glamor
