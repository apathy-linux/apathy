# 1
./configure \
 --build=$CBUILD                   \
 --host=$CHOST                     \
 --prefix=/usr                     \
 --sbindir=/usr/bin                \
 --sysconfdir=/etc/ssh             \
 --datadir=/usr/share/openssh      \ 
 --libexecdir=/usr/lib/ssh         \
\
 --with-privsep-path=/var/lib/sshd \
 --with-privsep-user=sshd          \
 --with-ssl-engine                 \
 --without-rpath                   \
 --without-selinux                 \
 --disable-lastlog                 \
 --disable-strip                   \
 --disable-utmp                    \
 --disable-wtmp
