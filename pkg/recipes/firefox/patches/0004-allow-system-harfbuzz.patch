index 248aa36b3d..db1954effc 100644
--- a/gfx/thebes/moz.build
+++ b/gfx/thebes/moz.build
@@ -286,6 +286,9 @@ LOCAL_INCLUDES += CONFIG["SKIA_INCLUDES"]
 
