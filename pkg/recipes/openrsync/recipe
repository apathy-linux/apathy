# 1
tar xf /mss/work/sauces/openrsync-f50d0f82.tar.zst
cd     openrsync/

pdir="/mss/repo/pkg/recipes/openrsync/patches"
patch -p1 < "${pdir}"/0001-socket.c-fix-musl-BUFSIZ.patch

./configure
make PREFIX="/usr"

# 2
doas -s
for i in openrsync; do
 strip --strip-all "${i}"
 chown root:root "${i}"
 mv "${i}" /usr/bin/
 ln -sfv "${i}" /usr/bin/rsync
done
