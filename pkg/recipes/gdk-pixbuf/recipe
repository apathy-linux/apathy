# 1
sed -i "/subdir('tests')/d" meson.build

mkdir build
cd    build

meson --buildtype=plain \
 --prefix=/usr            \
 -Dpng=enabled            \
 -Dtiff=enabled           \
 -Djpeg=enabled           \
 -Dbuiltin_loaders=all    \
 -Dgtk_doc=false          \
 -Ddocs=false             \
 -Dintrospection=disabled \
 -Dman=false              \
 -Drelocatable=false      \
 -Dinstalled_tests=false  \
 -Dgio_sniffing=false     \
..
