# 1
mimup

curpwd="${PWD}"
tar xf /mss/work/sauces/Mako-1.1.4.tar.gz
cd Mako-1.1.4/

python3 setup.py build
python3 setup.py install --prefix=/usr --root="${PWD}/KEK"

cd "${PWD}"/KEK/usr/lib/python*/site-packages
export PYTHONPATH="${PWD}":$(python -c "import sys; print(':'.join(sys.path))")
cd "${curpwd}"
unset curpwd

# 2
tar xf /mss/work/sauces/mesa-22.3.1.tar.xz
cd     mesa-22.3.1/

sed -i "/pre_args += '-DUSE_ELF_TLS'/d" meson.build
python3 bin/git_sha1_gen.py --output include/git_sha1.h

mkdir build
cd    build

meson --buildtype=plain \
 --prefix=/usr                  \
\
 -Dplatforms=x11                \
 -Ddri3=enabled                 \
 -Dshader-cache=enabled         \
 -Dshader-cache-max-size=1G     \
 -Dshared-glapi=enabled         \
\
 -Dopengl=true                  \
 -Dgbm=enabled                  \
 -Dglx=dri                      \
 -Degl=enabled                  \
\
 -Ddri-drivers=                 \
 -Dgallium-drivers=crocus,virgl \
 -Dvulkan-drivers=              \
\
 -Dgallium-extra-hud=false      \
 -Dgallium-vdpau=disabled       \
 -Dgallium-omx=disabled         \
 -Dgallium-va=disabled          \
 -Dgallium-xa=disabled          \
\
 -Dgles1=disabled               \
 -Dgles2=disabled               \
 -Dllvm=disabled                \
 -Dvalgrind=disabled            \
 -Dlibunwind=disabled           \
 -Dlmsensors=disabled           \
..
