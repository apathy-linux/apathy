# 1
penis="/mss/work/table/KEK"
export          CFLAGS="${CFLAGS}   -L${penis}/lib -I${penis}/include -fPIC -fPIE"
export        CXXFLAGS="${CXXFLAGS} -L${penis}/lib -I${penis}/include -fPIC -fPIE"
export            PATH="${PATH}:/mss/work/table/go-1.15.2-alpine/bin"
export PKG_CONFIG_PATH="${PKG_CONFIG_PATH}:${penis}/lib/pkgconfig"
export    LIBRARY_PATH="${LIBRARY_PATH}:${penis}/lib"

myconfigure(){
 ./configure \
  --build=$CBUILD     \
  --host=$CHOST       \
  --prefix="${penis}" \
  --enable-static     \
  --disable-shared    \
  ${@}
}

# 2
tar xf /mss/work/sauces/go-1.15.2-alpine.tar.zst

# 3
tar xf /mss/work/sauces/libmnl-1.0.4.tar.bz2
cd     libmnl-1.0.4/

pdir="/mss/repo/pkg/recipes/nfqws/patches"
patch -p1 < "${pdir}"/0001-libmnl-fix-includes.patch

myconfigure
make
make install

cd ../; rm -rf libmnl-1.0.4/

# 4
tar xf /mss/work/sauces/libnfnetlink-1.0.1.tar.bz2
cd     libnfnetlink-1.0.1/

patch -p1 < "${pdir}"/0002-libnfnetlink-fix-includes.patch

configtomusl
myconfigure
make
make install

cd ../; rm -rf libnfnetlink-1.0.1/

# 5
tar xf /mss/work/sauces/libnetfilter_queue-1.0.5.tar.bz2
cd     libnetfilter_queue-1.0.5/

configtomusl
myconfigure
make
make install

cd ../; rm -rf libnetfilter_queue-1.0.5/

# 6
tar xf /mss/work/sauces/libpcap-1.10.1.tar.gz
cd     libpcap-1.10.1/

pdir="/mss/repo/pkg/recipes/wlanshit/patches"
patch -p1 < "${pdir}"/0001-libpcap-fix-headers.patch

./configure \
 --build=$CBUILD     \
 --host=$CHOST       \
 --prefix="${penis}" \
 --enable-static     \
 --disable-shared    \
 --disable-ipv6      \
 --disable-dbus

make
make install

cd ../; rm -rf libpcap-1.10.1/

# 7
tar xf /mss/work/sauces/libnet-1.2.tar.gz
cd     libnet-1.2/

pdir="/mss/repo/pkg/recipes/spoofshit/patches/"
patch -p1 < "${pdir}"/0001-libnet-fix-types.patch

./configure \
 --build=$CBUILD     \
 --host=$CHOST       \
 --prefix="${penis}" \
 --disable-shared    \
 --enable-static     \
 --with-link-layer=linux

make
make install
cd ../; rm -rf libnet-1.2/

# 8
tar xf /mss/work/sauces/libnids-1.24.tar.gz
cd     libnids-1.24/

configtomusl

./configure \
 --build=$CBUILD     \
 --host=$CHOST       \
 --prefix="${penis}" \
 --disable-shared    \
 --enable-static     \

make
