# 1
gcd1 https://github.com/hrkfdn/mpdas
cd mpdas/

make PREFIX=/usr CONFIG=/etc
make PREFIX=/usr CONFIG=/etc DESTDIR="${PWD}/KEK" install

# 2
doas -s
for i in KEK/usr/bin/mpdas; do
 strip --strip-all "${i}"
 chown root:root "${i}"
 mv "${i}" /usr/bin/
done

cp /mss/repo/dir/etc/mpdasrc /etc
chown root:root /etc/mpdasrc
