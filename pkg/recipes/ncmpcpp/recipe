# 1
money="/mss/work/table/KEK"
export          CFLAGS="${CFLAGS}   -L${money}/lib -I${money}/include -fPIC"
export        CXXFLAGS="${CXXFLAGS} -L${money}/lib -I${money}/include -fPIC"
export            PATH="${PATH}:${money}/bin"
export    LIBRARY_PATH="${LIBRARY_PATH}:${money}/lib"
export PKG_CONFIG_PATH="${PKG_CONFIG_PATH}:${money}/lib/pkgconfig"

# 2
cdt1
tar xf \
 /mnt/mss/stuff/techy-bits/packaged-software/boost-1.76.0-static-libs.tar.zst

# 3
tar xf /mss/work/sauces/fftw-3.3.8.tar.gz
cd     fftw-3.3.8/

cleancmake

mkdir mybuild
cd    mybuild

cmake -Wno-dev -GNinja \
 -DCMAKE_INSTALL_PREFIX="${money}"      \
 -DCMAKE_INSTALL_LIBDIR=lib             \
 -DCMAKE_C_FLAGS="$CFLAGS"              \
 -DCMAKE_CXX_FLAGS="$CXXFLAGS"          \
 -DCMAKE_EXE_LINKER_FLAGS="$LDFLAGS"    \
 -DCMAKE_SHARED_LINKER_FLAGS="$LDFLAGS" \
 -DCMAKE_C_COMPILER_TARGET="$CHOST"     \
 -DCMAKE_CXX_COMPILER_TARGET="$CHOST"   \
\
 -DBUILD_SHARED_LIBS=OFF                \
 -DBUILD_TESTS=OFF                      \
 -DDISABLE_FORTRAN=ON                   \
 -DENABLE_AVX=OFF                       \
 -DENABLE_AVX2=OFF                      \
 -DENABLE_FLOAT=OFF                     \
 -DENABLE_LONG_DOUBLE=OFF               \
 -DENABLE_OPENMP=OFF                    \
 -DENABLE_QUAD_PRECISION=OFF            \
 -DENABLE_SSE=ON                        \
 -DENABLE_SSE2=ON                       \
 -DENABLE_THREADS=OFF                   \
 ..

samu
samu install

cd ../../
rm -rf fftw-3.3.8/

mv "${money}"/lib/pkgconfig/{fftw.pc,fftw3.pc}

# 3
tar xf /mss/work/sauces/taglib-1.11.1.tar.gz
cd     taglib-1.11.1/

cleancmake

mkdir mybuild
cd    mybuild

cmake -Wno-dev -GNinja \
 -DCMAKE_INSTALL_PREFIX="${money}"      \
 -DCMAKE_C_FLAGS="$CFLAGS"              \
 -DCMAKE_CXX_FLAGS="$CXXFLAGS"          \
 -DCMAKE_EXE_LINKER_FLAGS="$LDFLAGS"    \
 -DCMAKE_SHARED_LINKER_FLAGS="$LDFLAGS" \
 -DCMAKE_C_COMPILER_TARGET="$CHOST"     \
 -DCMAKE_CXX_COMPILER_TARGET="$CHOST"   \
\
 -DBUILD_SHARED_LIBS=OFF                \
 ..

samu
samu install

cd ../../
rm -rf taglib-1.11.1/

sed -i -e 's/-ltag/-ltag -lz/' "${money}"/bin/taglib-config

# 4
export CXXFLAGS="${CXXFLAGS} -DBOOST_NO_CXX98_FUNCTION_BASE"
tar xf /mss/work/sauces/ncmpcpp-0.9.2.tar.gz
cd     ncmpcpp-0.9.2/

./autogen.sh

./configure \
 --build=$CBUILD       \
 --host=$CHOST         \
 --prefix=/usr         \
\
 --enable-clock        \
 --with-fftw           \
 --with-taglib         \
 --enable-outputs      \
 --enable-visualizer   \
 --enable-static-boost \
\
 --with-boost="${money}"

time make

# 5
doas -s
for i in src/ncmpcpp; do
 strip --strip-all "${i}"
 chown root:root "${i}"
 mv "${i}" /usr/bin/
done
