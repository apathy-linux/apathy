+++ b/src/bootstrap/native.rs
@@ -1108,7 +1108,7 @@ impl Step for Libunwind {
             cpp_cfg.flag("-std=c++11");
         }
 
-        if self.target.contains("x86_64-fortanix-unknown-sgx") || self.target.contains("musl") {
