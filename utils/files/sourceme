# 1 > vars
# 1.1 > set before export
mypath="/usr/sbin:/usr/bin:/sbin:/bin"
mypath="$mypath:/mss/bin:/home/mss/execs"
mypath="$mypath:/opt/llvm-14.0.2/bin"
mypath="$mypath:/opt/llvm-14.0.2/compat"
mypath="$mypath:/opt/rustc-1.60.0/bin"
mypath="$mypath:/opt/cbindgen-0.23.0/bin"
mypath="$mypath:/opt/node.js-18.0.0/bin"
mypath="$mypath:/opt/firefox-100.0/bin"
mypath="$mypath:/opt/wlanshit/bin"
mypath="$mypath:/opt/cryptshit/bin"
mypath="$mypath:/opt/tor/bin"
mypath="$mypath:/opt/spoofshit/bin"

mylibpath="/opt/llvm-14.0.2/lib"
mylibpath="$mylibpath:/opt/rustc-1.60.0/lib"
mypkgconfigpath="/usr/share/pkgconfig:/usr/lib/pkgconfig"

# 1.2 > essentials
export            PATH="$mypath"
export    LIBRARY_PATH="$mylibpath"
export LD_LIBRARY_PATH="$mylibpath"
export PKG_CONFIG_PATH="$mypkgconfigpath"
export            LANG="en_US.UTF-8"
export          LC_ALL="en_US.UTF-8"
export           PAGER="less"
export          EDITOR="vim"
export         GPG_TTY="$(tty)"
export   XDG_DATA_DIRS="/usr/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CONFIG_DIRS="/etc/xdg"
export         INPUTRC="/etc/inputrc"
export         MANPATH="/usr/share/man"
export        INFOPATH="/usr/share/info"

# 1.3 > unset
unset mypath mylibpath mypkgconfigpath

# 1.4 > extra
export        MPD_HOST="/mnt/mss/stuff/media/music/mpd/socket"
export MOZ_USE_XINPUT2="1"

