#!/mss/bin/sh
mypicom(){
 picom \
  --backend glx          \
  --unredir-if-possible  \
  --glx-no-stencil       \
  --glx-no-rebind-pixmap \
  --use-damage           \
  ${@} & disown

 exit 0
}

pidboi="$(pidof picom)"
if [ ! -z "${pidboi}" ]
 then 
  kill -15 "${pidboi}"
 else
  case "${1}" in
   vsync|-v)  mypicom --vsync ;;
   *)         mypicom         ;;
  esac
fi
